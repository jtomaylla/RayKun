    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="237dp"
        android:layout_margin="0dp"
        android:background="@color/color_primary_dark"
        android:src="@drawable/raykunbanner" />

        <!--</TableRow>-->
    <!--</LinearLayout>-->

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="center"
        android:textColor="@color/white"
        android:hint="Enter your email"
        android:text="juan.tomaylla@gmail.com"
        android:inputType="textEmailAddress" />

    <EditText
        android:layout_marginBottom="10pt"
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="center"
        android:textColor="@color/white"
        android:hint="Enter your password"
        android:text="cajahuan02"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/buLogin"
        android:layout_width="50pt"
        android:layout_height="wrap_content"
        android:background="@drawable/bu_color"
        android:onClick="buLoginEvent"
        android:layout_marginBottom="10pt"
        android:layout_marginTop="10pt"
        android:textColor="@color/white"
        android:text="Login" />
    <Button
        android:id="@+id/buRegister"
        android:layout_width="50pt"
        android:layout_height="wrap_content"
        android:background="@drawable/bu_color"
        android:onClick="buRegisterUserEvent"
        android:textColor="@color/white"
        android:text="Demo Login" />
</LinearLayout>
