                android:src="@drawable/ic_launcher" />

            <com.simplemobiletools.commons.views.MyTextView
                android:id="@+id/about_raykun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_below="@+id/about_image"
                android:text="@string/smart_sales_force"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textStyle="bold" />

        </FrameLayout>
        <com.simplemobiletools.commons.views.MyTextView
            android:id="@+id/about_website"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/about_frame"
            android:autoLink="web"
            android:text="@string/my_website"
            android:textColorLink="@color/color_primary" />

        <com.simplemobiletools.commons.views.MyTextView
            android:id="@+id/about_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/about_website"
            android:layout_marginTop="@dimen/activity_margin"
            android:paddingBottom="@dimen/activity_margin"
            android:text="@string/my_email"
            android:textColorLink="@color/color_primary" />

